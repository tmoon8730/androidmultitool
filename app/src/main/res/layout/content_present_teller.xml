<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PresentTeller.PresentTeller"
    tools:showIn="@layout/activity_present_teller"
    android:background="@color/colorPrimary">
    <TextView
        android:id="@+id/presentTellerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/presentTellerTitle"
        android:textColor="@color/colorIcons"
        android:textSize="@dimen/title_size"
        android:gravity="center"/>
    <Button
        android:id="@+id/presentTellerMainButton"
        android:layout_width="@dimen/present_button_dimensions"
        android:layout_height="@dimen/present_button_dimensions"
        android:layout_below="@id/presentTellerTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/button_top_margin"
        android:text="@string/presentTellerMainButton"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/presentTellerResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/presentTellerMainButton"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/button_top_margin"
        android:textColor="@color/colorPrimaryLight"/>
</RelativeLayout>
